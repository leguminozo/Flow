{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "data/**/*.ts",
    "hooks/**/*.ts",
    "lib/**/*.ts",
    "services/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "supabase/**/*",
    "node_modules",
    "dist",
    "build"
  ]
}
